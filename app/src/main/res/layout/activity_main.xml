<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.link.foldtextviewlibrary.FoldTextView
        android:id="@+id/fold_text_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <com.link.foldtextviewlibrary.FoldTextView
        android:id="@+id/fold_text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        app:contentTextColor="@color/colorPrimary"
        app:foldText="More"
        app:contentLineSpaceMultiplier="1.2"
        app:foldDrawable="@mipmap/ic_fold"
        app:unFoldDrawable="@mipmap/ic_unfold"
        app:stateTvGravity="left"
        app:stateTextColor="@color/colorPrimary"
        app:unFoldText="Less" />

    <com.link.foldtextviewlibrary.FoldTextView
        android:id="@+id/fold_text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:stateTvGravity="center"
        android:layout_marginEnd="15dp"
        app:foldText=""
        app:unFoldText="" />

    <com.link.foldtextviewlibrary.FoldTextView
        android:id="@+id/fold_text_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:stateTvGravity="center"
        android:layout_marginEnd="15dp" />

</LinearLayout>